<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/ambev_title_order_previous"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ambev_title_order_previous"
        android:importantForAccessibility="yes"
        android:focusable="true"
        android:textSize="@dimen/default_16sp"
        android:layout_margin="@dimen/default_16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ambev_constraint_item_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_16dp"
        android:layout_marginLeft="@dimen/default_16dp"
        app:layout_constraintTop_toBottomOf="@+id/ambev_title_order_previous"
        app:layout_constraintStart_toStartOf="@+id/ambev_product_item_decrease">
        <ImageView
            android:id="@+id/ambev_product_item_image"
            android:layout_width="@dimen/default_100dp"
            android:layout_height="@dimen/default_100dp"
            android:focusable="true"
            android:adjustViewBounds="true"
            android:importantForAccessibility="yes"
            android:src="@drawable/image_teste"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ambev_constraint_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/default_16dp"
        app:layout_constraintTop_toTopOf="@+id/ambev_constraint_item_order"
        app:layout_constraintStart_toStartOf="@+id/ambev_product_item_add"
        >
        <TextView
            android:id="@+id/ambev_product_item_title"
            android:layout_width="@dimen/default_128dp"
            android:layout_height="wrap_content"
            android:text="Pepsi"
            android:textSize="@dimen/default_16sp"
            android:importantForAccessibility="yes"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />
        <TextView
            android:id="@+id/ambev_product_item_amount"
            android:layout_width="@dimen/default_0dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/default_16sp"
            android:importantForAccessibility="yes"
            android:text="1x1 Unidade"
            app:layout_constraintStart_toStartOf="@+id/ambev_product_item_title"
            app:layout_constraintTop_toBottomOf="@+id/ambev_product_item_title"
            />
        <TextView
            android:id="@+id/ambev_product_item_description"
            android:layout_width="@dimen/default_0dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/default_16sp"
            android:importantForAccessibility="yes"

            android:text="120 ML CAN"
            app:layout_constraintStart_toStartOf="@+id/ambev_product_item_amount"
            app:layout_constraintTop_toBottomOf="@+id/ambev_product_item_amount"
            />
        <TextView
            android:id="@+id/ambev_product_item_price"
            android:layout_width="@dimen/default_0dp"
            android:layout_height="wrap_content"
            android:importantForAccessibility="yes"
            android:textSize="@dimen/default_14sp"
            android:text="R$100,00"
            app:layout_constraintStart_toStartOf="@+id/ambev_product_item_description"
            app:layout_constraintTop_toBottomOf="@+id/ambev_product_item_description"
            />
        <TextView
            android:id="@+id/ambev_product_item_price_old"
            android:layout_width="@dimen/default_0dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/default_14sp"
            android:layout_marginLeft="@dimen/default_8dp"
            android:text="R$120,00"
            app:layout_constraintStart_toEndOf="@+id/ambev_product_item_price"
            app:layout_constraintTop_toBottomOf="@+id/ambev_product_item_description"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/ambev_product_item_decrease"
        android:layout_width="@dimen/default_32dp"
        android:layout_height="@dimen/default_32dp"
        android:text="@string/ambev_product_item_decrease_text"
        android:textSize="@dimen/default_20sp"
        android:textAlignment="center"
        android:background="@drawable/button_circule_item"
        android:importantForAccessibility="yes"
        android:layout_marginTop="@dimen/default_16dp"
        android:layout_marginLeft="@dimen/default_16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ambev_constraint_item_order"
        />

    <EditText
        android:id="@+id/ambev_product_item_amount_edit"
        android:layout_width="@dimen/default_48dp"
        android:layout_height="@dimen/default_32dp"
        android:layout_marginLeft="@dimen/default_16dp"
        android:textAlignment="center"
        android:background="@drawable/editbox_border"
        android:importantForAccessibility="yes"
        android:text="5"
        app:layout_constraintBottom_toBottomOf="@+id/ambev_product_item_decrease"
        app:layout_constraintStart_toEndOf="@+id/ambev_product_item_decrease"
        />

    <Button
        android:id="@+id/ambev_product_item_plus"
        android:layout_width="@dimen/default_32dp"
        android:layout_height="@dimen/default_32dp"
        android:text="@string/ambev_product_item_plus_text"
        android:textSize="@dimen/default_20sp"
        android:textAlignment="center"
        android:background="@drawable/button_circule_item"
        android:layout_marginLeft="@dimen/default_16dp"
        android:importantForAccessibility="yes"
        android:focusable="true"
        app:layout_constraintBottom_toBottomOf="@+id/ambev_product_item_amount_edit"
        app:layout_constraintStart_toEndOf="@+id/ambev_product_item_amount_edit"
        />
    <Button
        android:id="@+id/ambev_product_item_add"
        android:layout_width="@dimen/default_150dp"
        android:layout_height="@dimen/default_32dp"
        android:importantForAccessibility="yes"
        android:textSize="@dimen/default_16sp"
        android:layout_marginRight="@dimen/default_16dp"
        android:layout_marginLeft="@dimen/default_32dp"
        android:layout_marginTop="@dimen/default_8dp"
        android:background="@drawable/button_add_product_border"
        android:focusable="true"
        android:text="@string/ambev_product_item_add_text"
        app:layout_constraintBottom_toBottomOf="@+id/ambev_product_item_plus"
        app:layout_constraintStart_toEndOf="@+id/ambev_product_item_plus"
        />
</androidx.constraintlayout.widget.ConstraintLayout>
